{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Init DB",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/init_db.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Watcher (Watch Documents)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/cli.py",
            "console": "integratedTerminal",
            "args": [
                "watch",
                "${env:HOME}/Documents"
            ]
        },
        {
            "name": "Search (Test Query)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/cli.py",
            "console": "integratedTerminal",
            "args": [
                "search",
                "kubernetes setup"
            ]
        }
    ]
}
